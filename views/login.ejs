<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="/css/bootstrap.min.css">
<script src="/js/jquery.min.js" charset="utf-8"></script>
<script src="/js/popper.min.js" charset="utf-8"></script>
<script src="/js/bootstrap.min.js" charset="utf-8"></script>
<link rel="stylesheet" href="/css/login.css">
<div class="container-fluid">
  <div class="row text-center fullHeight flexCenter loginBg">
    <div class="col-11 col-md-6 loginmodal">
      <img height="100" width="100" src="/profile.svg" alt="profile">
      <form method="POST" action="/login" >
        <div class="form-group text-left">
          <label for="inputUsername">Username</label>
          <input name="username" type="text" class="form-control" id="inputUsername" placeholder="Enter username...">
        </div>
        <div class="form-group text-left">
          <label for="passwordInput">Password</label>
          <input name="password" type="password" class="form-control" id="passwordInput" placeholder="Enter Password...">
        </div>
        <button type="submit" class="btn btn-outline-success">Submit</button>
      </form>
    </div>
  </div>
</div>
